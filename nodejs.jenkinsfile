pipeline{
    agent {
        node { label "master" }
    }
    parameters{
        choice(choices: ["-v","build"],description: "npm",name: "buildShell")
    }
    stages{
        stage("npm构建"){
            steps{
                script{
                    nodejs_home = tool "NPM"
                    sh "export PATH=\$PATH:${nodejs_home}/bin && ${nodejs_home}/bin/npm ${buildShell}"
                }
            }
        }
    }
}
